<body>

    <div class="card">
        <h1>CP Randomizer ðŸŽ²</h1>
        <p>Enter your Codeforces Handle:</p>
        
        <input type="text" id="handle" placeholder="e.g. tourist">
        <button onclick="getRating()">Get My Rating</button>

        <div id="result"></div>
    </div>

    <script>
        let allProblems = []; // Global variable to store problems
        let isProblemsLoaded = false;

        // 1. Start fetching problems IMMEDIATELY when page loads
        window.onload = async function() {
            try {
                console.log("Background fetching started...");
                let response = await fetch('https://codeforces.com/api/problemset.problems');
                let data = await response.json();
                allProblems = data.result.problems;
                isProblemsLoaded = true;
                console.log("Problems loaded!");
            } catch (error) {
                console.error("Background fetch failed", error);
            }
        };

        async function getRating() {
            let handle = document.getElementById("handle").value;
            let resultDiv = document.getElementById("result");
            
            if (!handle) {
                resultDiv.innerText = "Please enter a handle!";
                return;
            }

            resultDiv.innerText = "Checking User Stats...";

            try {
                // 2. Only fetch User Data on click (It's fast)
                let userResponse = await fetch(`https://codeforces.com/api/user.info?handles=${handle}`);
                let userData = await userResponse.json();

                if (userData.status === "FAILED") {
                    resultDiv.innerText = "User not found!";
                    return;
                }

                let currentRating = userData.result[0].rating || 800; // Default to 800 if unrated
                let targetRating = currentRating + 200;

                resultDiv.innerHTML = `
                    <p>Current Rating: <b>${currentRating}</b></p>
                    <p>Target: <b>${targetRating}</b></p>
                    <p>Picking a problem...</p>
                `;

                // 3. Wait for problems if they aren't ready yet (Fallback)
                if (!isProblemsLoaded) {
                    resultDiv.innerText += " (Still downloading problem set, one sec...)";
                    while (!isProblemsLoaded) {
                        await new Promise(r => setTimeout(r, 500)); // Wait 0.5s checks
                    }
                }

                // 4. Filter Instantaneously from Memory
                let matchingProblems = allProblems.filter(p => p.rating === targetRating);

                if (matchingProblems.length === 0) {
                    resultDiv.innerHTML += "<p>No problems found at this specific rating!</p>";
                    return;
                }

                let randomIndex = Math.floor(Math.random() * matchingProblems.length);
                let randomProblem = matchingProblems[randomIndex];
                let problemLink = `https://codeforces.com/contest/${randomProblem.contestId}/problem/${randomProblem.index}`;

                resultDiv.innerHTML += `
                    <div style="margin-top: 20px; padding: 10px; background-color: #444; border-radius: 8px;">
                        <h3>${randomProblem.name}</h3>
                        <a href="${problemLink}" target="_blank" style="color: #4ade80; font-size: 1.2em;">Solve Now ðŸš€</a>
                    </div>
                `;

            } catch (error) {
                console.error(error);
                resultDiv.innerText = "Error. Check Console.";
            }
        }
    </script>

   

               
