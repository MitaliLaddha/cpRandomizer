<body>

    <div class="card">
        <h1>CP Randomizer ðŸŽ¯</h1>
        <p>Target your weaknesses.</p>
        
        <input type="text" id="handle" placeholder="Codeforces Handle (e.g. tourist)">
        
        <select id="tagSelect">
            <option value="all">ðŸŽ² Any Topic</option>
            <option value="dp">Dynamic Programming</option>
            <option value="math">Math</option>
            <option value="greedy">Greedy</option>
            <option value="graphs">Graphs</option>
            <option value="data structures">Data Structures</option>
            <option value="constructive algorithms">Constructive</option>
            <option value="binary search">Binary Search</option>
            <option value="number theory">Number Theory</option>
        </select>

        <button onclick="getProblem()">Lock In ðŸ”’</button>

        <div id="result"></div>
    </div>

    <script>
        let allProblems = []; 
        let isProblemsLoaded = false;

        // 1. Background Fetch
        window.onload = async function() {
            try {
                let response = await fetch('https://codeforces.com/api/problemset.problems');
                let data = await response.json();
                allProblems = data.result.problems;
                isProblemsLoaded = true;
                console.log("Problems loaded!");
            } catch (error) {
                console.error("Fetch failed", error);
            }
        };

        async function getProblem() {
            let handle = document.getElementById("handle").value;
            let tag = document.getElementById("tagSelect").value;
            let resultDiv = document.getElementById("result");
            
            if (!handle) {
                resultDiv.innerHTML = "<span style='color:#ef4444'>Please enter a handle!</span>";
                return;
            }

            resultDiv.innerHTML = "<p>Analyzing stats...</p>";

            try {
                // 2. Get User Rating
                let userResponse = await fetch(`https://codeforces.com/api/user.info?handles=${handle}`);
                let userData = await userResponse.json();

                if (userData.status === "FAILED") {
                    resultDiv.innerHTML = "<span style='color:#ef4444'>User not found!</span>";
                    return;
                }

                let currentRating = userData.result[0].rating || 800;
                let rawTarget = currentRating + 200;
                let targetRating = Math.round(rawTarget / 100) * 100;

                // 3. Wait for data
                if (!isProblemsLoaded) {
                    resultDiv.innerHTML += "<p>Downloading problem set...</p>";
                    while (!isProblemsLoaded) await new Promise(r => setTimeout(r, 100)); 
                }

                // --- 4. NEW FILTERING LOGIC ---
                let matchingProblems = allProblems.filter(p => {
                    // Check Rating
                    if (p.rating !== targetRating) return false;
                    
                    // Check Tag (if not 'all')
                    if (tag !== "all" && !p.tags.includes(tag)) return false;

                    return true;
                });

                // Fallback: If no problems found for that specific tag + rating
                if (matchingProblems.length === 0) {
                    resultDiv.innerHTML = `
                        <p style="color:#fbbf24">No ${tag} problems found at ${targetRating} rating.</p>
                        <p>Try a different topic or rating!</p>
                    `;
                    return;
                }

                // 5. Pick Random & Display
                let randomProblem = matchingProblems[Math.floor(Math.random() * matchingProblems.length)];
                let link = `https://codeforces.com/contest/${randomProblem.contestId}/problem/${randomProblem.index}`;

                resultDiv.innerHTML = `
                    <div style="animation: fadeIn 0.5s;">
                        <p style="margin-bottom:5px; color:#888;">Target: <b>${targetRating}</b> | Topic: <b>${tag.toUpperCase()}</b></p>
                        <h2 style="margin: 10px 0;">${randomProblem.name}</h2>
                        <a href="${link}" target="_blank" style="
                            display: inline-block;
                            margin-top: 10px;
                            color: #1a1a1a;
                            background: #4ade80;
                            padding: 10px 20px;
                            text-decoration: none;
                            border-radius: 6px;
                            font-weight: bold;
                        ">Open Problem ðŸš€</a>
                    </div>
                `;

            } catch (error) {
                console.error(error);
                resultDiv.innerText = "Error fetching data.";
            }
        }
    </script>
</body>
