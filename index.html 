<body>

    <div class="card">
        <h1>CP Randomizer ðŸŽ²</h1>
        <p>Enter your Codeforces Handle:</p>
        
        <input type="text" id="handle" placeholder="e.g. tourist">
        <button onclick="getRating()">Get My Rating</button>

        <div id="result"></div>
    </div>

    <script>
        let allProblems = []; 
        let isProblemsLoaded = false;

        // 1. Background Fetch (Keep this, it makes it fast)
        window.onload = async function() {
            try {
                let response = await fetch('https://codeforces.com/api/problemset.problems');
                let data = await response.json();
                allProblems = data.result.problems;
                isProblemsLoaded = true;
                console.log("Problems loaded!");
            } catch (error) {
                console.error("Fetch failed", error);
            }
        };

        async function getRating() {
            let handle = document.getElementById("handle").value;
            let resultDiv = document.getElementById("result");
            
            if (!handle) {
                resultDiv.innerText = "Please enter a handle!";
                return;
            }

            resultDiv.innerText = "Analyzing...";

            try {
                // 2. Get User Rating
                let userResponse = await fetch(`https://codeforces.com/api/user.info?handles=${handle}`);
                let userData = await userResponse.json();

                if (userData.status === "FAILED") {
                    resultDiv.innerText = "User not found!";
                    return;
                }

                let currentRating = userData.result[0].rating || 800;
                
                // --- THE FIX STARTS HERE ---
                let rawTarget = currentRating + 200;
                
                // Math.round(1411 / 100) = 14
                // 14 * 100 = 1400
                let targetRating = Math.round(rawTarget / 100) * 100;
                // --- THE FIX ENDS HERE ---

                resultDiv.innerHTML = `
                    <p>Your Rating: <b>${currentRating}</b></p>
                    <p>Raw Target: ${rawTarget} â†’ Snap to: <b>${targetRating}</b></p>
                    <p>Finding a problem...</p>
                `;

                // 3. Wait for data if needed
                if (!isProblemsLoaded) {
                    while (!isProblemsLoaded) {
                        await new Promise(r => setTimeout(r, 100)); 
                    }
                }

                // 4. Filter
                let matchingProblems = allProblems.filter(p => p.rating === targetRating);

                if (matchingProblems.length === 0) {
                    // Fallback: If 1400 doesn't exist (unlikely), try +100
                    targetRating += 100;
                    matchingProblems = allProblems.filter(p => p.rating === targetRating);
                }

                if (matchingProblems.length === 0) {
                    resultDiv.innerHTML += "<p>No problems found even after rounding!</p>";
                    return;
                }

                let randomIndex = Math.floor(Math.random() * matchingProblems.length);
                let randomProblem = matchingProblems[randomIndex];
                let problemLink = `https://codeforces.com/contest/${randomProblem.contestId}/problem/${randomProblem.index}`;

                resultDiv.innerHTML += `
                    <div style="margin-top: 20px; padding: 15px; background-color: #444; border-radius: 8px; box-shadow: 0 4px 6px rgba(0,0,0,0.2);">
                        <h2 style="margin: 0 0 10px 0;">${randomProblem.name}</h2>
                        <div style="margin-bottom: 15px;">
                            <span style="background: #333; padding: 5px 10px; border-radius: 4px; font-size: 0.9em;">Rating: ${randomProblem.rating}</span>
                            <span style="background: #333; padding: 5px 10px; border-radius: 4px; font-size: 0.9em; margin-left: 5px;">${randomProblem.tags[0] || "algo"}</span>
                        </div>
                        <a href="${problemLink}" target="_blank" style="background-color: #4ade80; color: #1a1a1a; padding: 10px 20px; text-decoration: none; border-radius: 5px; font-weight: bold; display: inline-block;">Solve Now ðŸš€</a>
                    </div>
                `;

            } catch (error) {
                console.error(error);
                resultDiv.innerText = "Error. Check Console.";
            }
        }
    </script>
               
